%html
	%head
		%title Simone Bottecchia page
		%link(rel="stylesheet" href="stylesheets/bootstrap.min.css")
		%script{ :src => "javascripts/bootstrap.min.js" }
		%script{ :src => "https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js" } 
	%body
		.container
			.navbar
				.navbar-inner
					%a{:class =>"brand",:href => "/"} SMNB
					%ul{:class =>"nav"}
						-nav.each do |page,active|	
							-if active
								%li{:class =>"active"}
									%a{:href =>page} #{page}
							-else
								%li
									%a{:href =>page} #{page}
			=yield